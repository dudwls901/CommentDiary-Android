<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="376dp"
    android:background="@drawable/background_beige_radius_10">

    <TextView
        android:id="@+id/reportTextView"
        style="@style/BHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/report"
        android:textColor="@color/text_dark_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_ivory_radius_4"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/cancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportTextView">

        <EditText
            android:id="@+id/reportContentEditText"
            style="@style/MCaption2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/report_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="0dp"
            android:textColor="@color/text_brown"
            android:textColorHint="@color/text_brown" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        style="@style/BCaption"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/background_beige_top_border_light_brown_1"
        android:text="@string/cancel"
        android:textColor="@color/text_dark_brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        style="@style/BCaption"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/background_beige_left_top_border_light_brown_1"
        android:text="@string/submit"
        android:textColor="@color/text_dark_brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 달력 안의 숫자들에 적용되는 스타일 -->
    <style name="CalendarDateText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize" tools:ignore="SpUsage">13dp</item>
        <!--        <item name="font">@font/roboto_medium</item>-->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 달력 안의 요일들에 적용되는 스타일 -->
    <style name="CalendarDayOfWeek" parent="Theme.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

